{
  "extends": "airbnb-base",
  "globals": {
    "THREE": true,
    "GLTFLoader": true,
    "window": true,
    "document": true,
    "requestAnimationFrame": true,
    "performance": true,
    "Image": true
  },
  "rules": {
    "linebreak-style": 0,
    "max-len": 1,
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ]
  }
}